<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="br.com.devwolf.clik.Jogo">

    <RelativeLayout
        android:id="@+id/layout_jogo"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnClik"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/txtCliks"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_redondo"
            android:text="CLIK!"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/Footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#FF5722"
                android:elevation="0dp"
                android:text="Sair"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCompartilhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Footer"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="#448AFF"
                android:text="Compartilhar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCronometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="00"
            android:textAlignment="center"
            android:textColor="#F57C00"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtCliks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtCronometro"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="100dp" />

        <Button
            android:id="@+id/btnSurpresa1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toLeftOf="@+id/btnClik"
            android:layout_toStartOf="@+id/btnClik"
            android:layout_weight="1"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btnSurpresa2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/btnSurpresa1"
            android:layout_toEndOf="@+id/btnClik"
            android:layout_toRightOf="@+id/btnClik"
            android:layout_weight="1"
            android:background="@drawable/btn_surpresa"
            android:text="-"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Footer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="55dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
